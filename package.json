{
  "name": "@iml/online-help",
  "version": "2.4.0",
  "description": "The IML help docs",
  "files": ["targetdir/"],
  "scripts": {
    "build":
      "rm -rf targetdir && bundle exec jekyll build --destination targetdir --baseurl='/help'",
    "start": "bundle exec jekyll serve",
    "postversion": "npm run build",
    "link-check":
      "find . -name '*.md' -not -path './node_modules/*' -not -path './_site/*' | xargs -n 1 -I % sh -c 'echo %; markdown-link-check %;'"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/intel-hpdd/Online-Help.git"
  },
  "author": "IML Team",
  "devDependencies": {
    "markdown-link-check": "^3.1.5"
  }
}
